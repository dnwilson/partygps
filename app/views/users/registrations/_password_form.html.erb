<%= simple_form_for(@user, :url => { :action => "update_password" }, :html => { class: "form-horizontal style-form" , :method => :put }) do |f| %>
  <div class="form-group" style="border-top: 2px solid #eff2f7; padding-top: 15px; margin-top: 15px">
    <%= f.label :password, "New Password", class: "col-sm-2 col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password, :autocomplete => "off", placeholder: "New Password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmation", class: "col-sm-2 col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :password, :autocomplete => "off", placeholder: "New Password", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :current_password, "Current Password", class: "col-sm-2 col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.password_field :current_password, :autocomplete => "off", placeholder: "Current Password", class: "form-control" %>
    </div>
  </div>
  <div class="form-actions right">
    <%= f.button :submit, "Update", class: "btn-primary" %>
  </div>
<% end %>