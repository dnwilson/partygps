<div id="login" class="col-md-4 col-md-offset-4 center">
	<h2>Sign in</h2>

	<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <%= f.email_field :email, required: true, autofocus: true, placeholder: "Email Address" %>
	    <%= f.password_field :password, required: true, placeholder: "Password" %>
	    <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %><%= f.label :remember_me, class: "remember_label" %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Log in" %>
	  </div>
	<% end %>

	<div class="devise-links">
		<%= render "devise/shared/links" %>
	</div>

</div>