<%= simple_form_for(@user, :url => { :action => "edit" }, :html => { class: "form-horizontal style-form" , :method => :put }) do |f| %>
  
  <div class="form-group" style="border-top: 2px solid #eff2f7; padding-top: 15px; margin-top: 15px">
    <%= f.label :address, "Address", class: "col-sm-2 col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address, placeholder: "Address", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :address2, "Address 2", class: "col-sm-2 col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :address2, placeholder: "Apt/Suite/Floor", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :city, "City", class: "col-sm-2 col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :city, placeholder: "City/Town", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :state, "State", class: "col-sm-2 col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :state, placeholder: "State/Province/Parish", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :zipcode, "Zip/Postal Code", class: "col-sm-2 col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :zipcode, placeholder: "Zip/Postal Code", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :country, "Country", class: "col-sm-2 col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.country_select :country, class: "form-control" %>
    </div>
  </div>

  <div class="form-actions right">
    <%= f.button :submit, "Update", class: "btn-primary" %>
  </div>
<% end %>  